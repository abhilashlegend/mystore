<header>
    <h1 class="logo"> {{ shop.name }}</h1>
    <nav>
        <ul class="navigation">
            {% for link in linklists.main-menu.links %}
                <li class="menu">{{ link.title | link_to: link.url }}            
            {% endfor %}
        </ul>

        {% if settings.show_search %}
            <form action="/search">
                <input type="search" name="q" />
                <button type="submit">Search</button>
            </form>
        {% endif %}
    </nav>
</header>